{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "jsx": "react-jsx",

    "target": "ESNext",
    "lib": ["ES2021", "dom", "DOM.Iterable"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": true
  },
  "include": [
    "./src/**/*",
    "./auth.ts",
    "./generate-schema.ts",
    "./vitest.config.mts"
  ]
}
